{
  "name": "Baileys Bun Service",
  "image": "oven/bun:latest",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "bun",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "postCreateCommand": "bun install || true",
  "forwardPorts": [
    3002
  ],
  "portsAttributes": {
    "3002": {
      "label": "Baileys HTTP API"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/auth,target=/workspaces/${localWorkspaceFolderBasename}/auth,type=bind"
  ],
  "env": {
    "NODE_ENV": "development",
    "PORT": "3002"
  }
}